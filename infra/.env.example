############################################################
# Roka -- Environment Variables Reference
#
# You should NOT edit this file manually.
# Run ./setup.sh to auto-generate infra/.env with all secrets.
#
# For VPS/production, set ROKA_DOMAIN before running setup.sh:
#   ROKA_DOMAIN=roka.example.com ./setup.sh
#
# LLM configuration (provider, model, API key) is managed
# from the UI at Settings > AI / LLM after first launch.
############################################################

############
# Secrets (auto-generated by setup.sh)
############

POSTGRES_PASSWORD=<generated>
NEXTAUTH_SECRET=<generated>

############
# Database
############

POSTGRES_USER=postgres
POSTGRES_DB=postgres

############
# Auth (NextAuth.js)
############

NEXTAUTH_URL=http://localhost:3000

############
# Backend
############

BACKEND_PORT=8100
BACKEND_URL=http://backend:8100

# OAuth (optional, for Connect Google/Slack in Settings)
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
SLACK_OAUTH_CLIENT_ID=
SLACK_OAUTH_CLIENT_SECRET=

DATABASE_URL=postgresql://postgres:<POSTGRES_PASSWORD>@db:5432/postgres

############
# Object Storage (SeaweedFS S3)
############

S3_ENDPOINT=http://storage:8333
S3_PUBLIC_ENDPOINT=http://localhost:8333
S3_ACCESS_KEY=<generated>
S3_SECRET_KEY=<generated>
S3_BUCKET=roka
S3_PORT=8333

############
# Centrifugo (real-time multiplexer)
############

CENTRIFUGO_TOKEN_SECRET=<generated>
CENTRIFUGO_API_KEY=<generated>
CENTRIFUGO_PORT=8000
CENTRIFUGO_API_URL=http://centrifugo:8000
NEXT_PUBLIC_CENTRIFUGO_URL=ws://localhost:8000/connection/websocket
